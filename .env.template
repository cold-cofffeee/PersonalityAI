# PersonalityAI Environment Configuration Template
# Copy this file to .env and fill in your actual values

# API Configuration
GEMINI_API_KEY=your_actual_api_key_here

# Environment Settings
ENVIRONMENT=production
DEBUG_MODE=false

# Admin Panel Credentials - CHANGE THESE FOR PRODUCTION!
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_secure_password_here

# Server Configuration (optional - defaults will be used if not set)
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Security Settings
SECRET_KEY=your_secret_key_for_sessions_here

# Optional: Database Configuration (if using database)
# DATABASE_URL=sqlite:///./personality_ai.db

# Optional: Redis Configuration (if using Redis caching)
# REDIS_URL=redis://localhost:6379

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/personality_ai.log